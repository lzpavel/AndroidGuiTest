<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_uielm_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UielmFragmentButtons">

    <ScrollView
        android:id="@+id/scroll_view_uielm_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_uielm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <ImageButton
                android:id="@+id/image_button_uielm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/star_big_on" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_1_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip1" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_2_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip2" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_3_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip3" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_4_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip4" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_5_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip5" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_6_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip6" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_7_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip7" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_8_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip8" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_9_uielm_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chip9" />

                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </HorizontalScrollView>

            <CheckBox
                android:id="@+id/check_box_uielm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radio_button_1_uielm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/radio_button_2_uielm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />
            </RadioGroup>

            <ToggleButton
                android:id="@+id/toggle_button_uielm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ToggleButton" />

            <Switch
                android:id="@+id/switch_uielm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action_button_uielm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_add" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>